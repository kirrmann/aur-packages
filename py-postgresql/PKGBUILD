pkgname=py-postgresql
pkgver=1.0.3
pkgrel=1
pkgdesc="Python 3 package providing modules to work with PostgreSQL"
arch=(any)
url="http://python.projects.postgresql.org"
license=('BSD')
depends=('python')
options=(!emptydirs)
source=("http://python.projects.postgresql.org/files/$pkgname-$pkgver.tar.gz")
md5sums=('8b10207d64a948aecf3b3070d47a1a79')

build() {
    cd $srcdir/$pkgname-$pkgver
    python3 setup.py install --root=$pkgdir/ --optimize=1
}
