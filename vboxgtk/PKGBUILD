# Contributor: Stefan Kirrmann <stefan.kirrmann at gmail dot com>

pkgname=vboxgtk
pkgver=0.5.2
pkgrel=2
pkgdesc="A simple GTK frontend for VirtualBox OSE."
arch=(any)
url="http://vboxgtk.sourceforge.net/"
license=('GPL3')
depends=('python2' 'pygtk>=2.14' 'virtualbox-ose>=3.1.6')
makedepends=('intltool')
options=(!emptydirs)
source=($pkgname-$pkgver.tar.gz::"https://sourceforge.net/project/downloading.php?group_id=263334&filename=$pkgname-$pkgver.tar.gz")
install=vboxgtk.install
md5sums=('48a808b7f069df52d9e857c6e9b14d61')

build() {
  cd $srcdir/$pkgname-$pkgver
  python2 setup.py install --root=$pkgdir/
}
