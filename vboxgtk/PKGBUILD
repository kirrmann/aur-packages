# Maintainer: Stefan Kirrmann <stefan.kirrmann at gmail dot com>

pkgname=vboxgtk
pkgver=0.7.0
pkgrel=1
pkgdesc="A simple GTK frontend for VirtualBox OSE."
arch=(any)
url="http://code.google.com/p/vboxgtk/"
license=('GPL3')
depends=('pygtk>=2.24' 'virtualbox-sdk>=4.1.2' 'gtk3' 'python2-gobject>=2.28.6')
makedepends=('intltool')
options=(!emptydirs)
source=($pkgname-$pkgver.tar.gz::"https://sourceforge.net/project/downloading.php?group_id=263334&filename=$pkgname-$pkgver.tar.gz")
install=vboxgtk.install
sha256sums=('19294561ae9f67a3e7a22a35158f88fc7ae0f4c652f64d6076401a902c3afd59')

build() {
  cd $srcdir/$pkgname-$pkgver
  python2 setup.py install --root=$pkgdir/
}
md5sums=('5d2b5fbaeea16c51ae711f4fe385f5e7')
